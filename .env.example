# Database connection
# Entorno local (XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=apilogin
ALLOW_DB_CREATE=true

# Entorno Railway (MySQL) - Railway inyecta estas variables autom√°ticamente
# Descomenta y usa si necesitas configurar manualmente
# MYSQLHOST=
# MYSQLPORT=3306
# MYSQLUSER=
# MYSQLPASSWORD=
# MYSQLDATABASE=
# DATABASE_URL=

# JWT configuration
# IMPORTANT: Replace with a strong, random secret in your real .env (do NOT commit secrets)
JWT_SECRET=CHANGE_ME_PLEASE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS origins (comma-separated). Include your frontend origins (localhost and LAN IP if needed)
# Examples:
# - http://localhost:3000
# - http://localhost:8081
# - http://192.168.1.50:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8081